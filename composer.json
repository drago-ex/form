{
	"name": "drago-ex/form",
	"type": "library",
	"description": "Helper classes for Nette forms with extended inputs and shortcuts.",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Zdeněk Papučík",
			"homepage": "https://github.com/accgit"
		}
	],
	"require": {
		"php": ">=8.3 <9",
		"nette/application": "^3.1",
		"nette/forms": "^3.0",
		"latte/latte": "^3.0"
	},
	"require-dev": {
		"nette/tester": "^2.3",
		"tracy/tracy": "^2.7",
		"phpstan/phpstan-nette": "^0.12"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"extra": {
		"drago-project": {
			"install": {
				"copy": {
					"src/Drago/assets/latte": "app/Core/Widget",
				}
			}
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration tests/phpstan.neon src",
		"tester": "tester tests -s"
	}
}
